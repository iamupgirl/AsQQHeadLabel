<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_fragment_star_recommend_star_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/recommend_center_star_item_solid_bg">

        <ImageView
            android:id="@+id/iv_fragment_star_recommend_star_item_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/iv_fragment_star_recommend_star_item_tips"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignBottom="@+id/iv_fragment_star_recommend_star_item_icon"
            android:layout_alignRight="@+id/iv_fragment_star_recommend_star_item_icon" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_fragment_star_recommend_star_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_12" />

</LinearLayout>